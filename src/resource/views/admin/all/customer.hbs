<div class="admin-all-customers-container">
  <div class="header">
    <div class="board-title">
      <p>Khách Hàng: </p>
    </div>

    <div class="date-filter">
      <input type="date" id="start-date">
      <input type="date" id="end-date">
      <button title="submit" type="submit">Xem</button>
    </div>
  </div>

  <div class="control-bar">
    <div class="search">
      <select id="search-type" class="search-btn">
        <option value="">Tìm kiếm theo</option>
        <option value="_id" selected>ID</option>
        <option value="name">Tên</option>
        <option value="email">Email</option>
        <option value="phone">Số điện thoại</option>
        <option value="address">Địa chỉ</option>
      </select>
      <input type="text" id="search-input" placeholder="Tìm kiếm khách hàng">
    </div>

    <div class="sort-filter">
      <div class="sort">
        <label>Sắp xếp:</label>
        <select id="revenue" class="filter-btn">
          <option value="">Doanh thu</option>
          <option value="-1">Doanh thu cao đến thấp</option>
          <option value="1">Doanh thu thấp đến cao</option>
        </select>
        <select id="quantity" class="filter-btn">
          <option value="">Đơn hàng</option>
          <option value="-1">Đơn hàng cao đến thấp</option>
          <option value="1">Đơn hàng thấp đến cao</option>
        </select>
      </div>

      <div class="filter">
        <label>Lọc:</label>
        <select id="gender" class="filter-btn">
          <option value="">Giới tính</option>
          <option value="male">Nam</option>
          <option value="female">Nữ</option>
        </select>
        <select id="memberCode" class="filter-btn">
          <option value="">Hạng thành viên</option>
        </select>
        
        <button id="clear-sort-filter" style="display: none">Xoá</button>
      </div>
    </div>

    <a href="/admin/all-customers/customer/create" target="_blank" class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <span>Thêm Khách Hàng</span>
    </a>
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width: 5% ">STT           </td>
          <td style="width: 15%">Mã Khách hàng </td>
          <td style="width: 15%">Tên Khách Hàng</td>
          <td style="width: 25%">Địa chỉ       </td>
          <td style="width: 10%">S/L Đơn       </td>
          <td style="width: 20%">Tổng doanh thu</td>
          <td style="width: 10%">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script type="module" src="/js/admin/all/customer.js"></script>