<div class="admin-all-purchases-container">  
  <div class="board-title">
    <p>Đơn nhập: </p>
  </div>

  <div class="control-bar">
    <div class="filter-and-create">
      <div class="sort">
        <label>Sắp xếp:</label>
        <select id="purchaseDate" class="filter-btn">
          <option value="">Ngày đặt hàng</option>
          <option value="1">Ngày tăng</option>
          <option value="-1">Ngày giảm</option>
        </select>

        <select id="totalPurchasePrice" class="filter-btn">
          <option value="">Giá trị</option>
          <option value="1">Giá trị tăng</option>
          <option value="-1">Giá trị giảm</option>
        </select>
      </div>

      <button id="clear-sort-filter" style="display: none">Xoá bộ lọc</button>

      <a target="_blank" rel="noopener noreferrer" href="/admin/all-purchases/purchase/create" class="create-btn" id="create-btn">
        <i class="fi fi-rr-plus"></i>
        <p>Thêm Đơn Nhập</p>
      </a>
    </div>
    <input type="text" id="search-input" placeholder="Tìm kiếm đơn nhập">
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT          </td>
          <td style="width: 20%">Mã đơn nhập  </td>
          <td style="width: 25%">Ngày nhập    </td>
          <td style="width: 15%">Tổng sản phẩm</td>
          <td style="width: 25%">Tổng chi phí </td>
          <td style="width: 10%">Chi tiết     </td>
          </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script type="module" src="/js/admin/all/purchase.js"></script>