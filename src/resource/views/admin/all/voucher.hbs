<div class="admin-all-voucher-container">  
  <div class="board-title">
    <p>Voucher: </p>
  </div>

  <div class="control-bar">
    <div class="filter-and-create">
      <div class="sort">
        <label>Sắp xếp theo:</label>
        <select id="discount" class="filter-btn">
          <option value="">Giá trị chiết khấu</option>
          <option value="1">Giá trị chiết khấu tăng dần</option>
          <option value="-1">Giá trị chiết khấu giảm dần</option>
        </select>
        <select id="startDate" class="filter-btn">
          <option value="">Ngày tạo</option>
          <option value="1">Ngày tạo gần nhất</option>
          <option value="-1">Ngày tạo xa nhất</option>
        </select>
        <select id="endDate" class="filter-btn">
          <option value="">Ngày hết hạn</option>
          <option value="1">Ngày hết hạn gần nhất</option>
          <option value="-1">Ngày hết hạn xa nhất</option>
        </select>
      </div>

      <div class="filter">
        <label>Lọc theo:</label>
        <select id="status" class="filter-btn">
          <option value="">Tình trạng</option>
          <option value="active">Còn hạn</option>
          <option value="end">Hết hạn</option>
        </select>
        <select id="memberCode" class="filter-btn">
          <option value="">Hạng thành viên</option>
        </select>
      </div>

      <button id="clear-filter" style="display: none">Xoá bộ lọc</button>

      <a href="/admin/all-vouchers/voucher/create" class="create-btn" id="create-btn">
        <i class="fi fi-rr-plus"></i>
        <p>Thêm Voucher</p>
      </a>
    </div>
    <input type="text" id="search-input" name="name" placeholder="Tìm kiếm voucher">
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT           </td>
          <td style="width: 15%">Mã Voucher    </td>
          <td style="width: 20%">Tên Voucher   </td>
          <td style="width: 25%">Mức chiết khấu</td>
          <td style="width: 25%">Ngày kết thúc </td>
          <td style="width: 10%">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script src="/js/admin/all/voucher.js"></script>