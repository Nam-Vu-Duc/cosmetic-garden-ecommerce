<div class="admin-all-employees-container">  
  <div class="header">
    <div class="board-title">
      <p>Nhân sự: </p>
    </div>

    <div class="date-filter">
      <input type="date" id="start-date">
      <input type="date" id="end-date">
      <button title="submit" type="submit">Xem</button>
    </div>
  </div>

  <div class="control-bar">
    <div class="search">
      <select id="search-type" class="search-btn">
        <option value="">Tìm kiếm theo</option>
        <option value="_id" selected>ID</option>
        <option value="name">Tên</option>
        <option value="email">Email</option>
        <option value="phone">Số điện thoại</option>
        <option value="address">Địa chỉ</option>
      </select>
      <input type="text" id="search-input" name="name" placeholder="Tìm kiếm nhân sự" />
    </div>

    <div class="sort-filter">
      <div class="sort">
        <label for="createdAt">Sắp xếp:</label>
        <select id="createdAt" class="filter-btn">
          <option value="">Thâm niên</option>
          <option value="1">Thâm niên tăng dần</option>
          <option value="-1">Thâm niên giảm dần</option>
        </select>
      </div>

      <div class="filter">
        <label>Lọc:</label>
        <select id="role" class="filter-btn">
          <option value="">Vị trí</option>
        </select>
        <select id="isActive" class="filter-btn">
          <option value="">Hoạt động</option>
          <option value="true">Online</option>
          <option value="false">Offline</option>
        </select>
        <button id="clear-sort-filter" style="display: none">Xoá bộ lọc</button>
      </div>
    </div>

    <a href="/admin/all-employees/employee/create" target="_blank" rel="noopener noreferrer" class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <span>Thêm Nhân Sự</span>
    </a>
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT          </td>
          <td style="width: 20%">Mã nhân viên </td>
          <td style="width: 25%">Tên nhân viên</td>
          <td style="width: 10%">Email        </td>
          <td style="width: 30%">Địa chỉ      </td>
          <td style="width: 10%">Chi tiết     </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script type="module" src="/js/admin/all/employee.js"></script>