<div class="admin-all-brands-container">  
  <div class="board-title">
    <p>Thương hiệu:</p>
  </div>

  <div class="control-bar">
    <div class="filter-and-create">
      <div class="sort">
        <label>Sắp xếp:</label>
        <select id="price" class="filter-btn">
          <option value="">Giá</option>
          <option value="1">Giá tăng</option>
          <option value="-1">Giá giảm</option>
        </select>

        <select id="rate" class="filter-btn">
          <option value="">Đánh giá</option>
          <option value="1">Đánh giá tăng</option>
          <option value="-1">Đánh giá giảm</option>
        </select>

        <select id="saleNumber" class="filter-btn">
          <option value="">Lượng bán</option>
          <option value="1">Lượng bán tăng</option>
          <option value="-1">Lượng bán giảm</option>
        </select>
      </div>

      <div class="filter">
        <label>Lọc:</label>
        <select id="price" class="filter-btn">
          {{!-- <option value="">Giá mặc định</option>
          <option value="1">Giá tăng</option>
          <option value="-1">Giá giảm</option> --}}
        </select>
      </div>
      <button id="clear-sort-filter" style="display: none">Xoá bộ lọc</button>

      <a target="_blank" rel="noopener noreferrer" href="/admin/all-orders/order/create" class="create-btn" id="create-btn">
        <i class="fi fi-rr-plus"></i>
        <p>Thêm Đơn Hàng</p>
      </a>
    </div>
    <input type="text" id="search-input" placeholder="Tìm kiếm khách hàng">
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT            </td>
          <td style="width: 15%">Tên Thương Hiệu</td>
          <td style="width: 15%">Tổng Sản Phẩm  </td>
          <td style="width: 15%">Tổng Lượng Bán </td>
          <td style="width: 20%">Tổng Doanh Thu </td>
          <td style="width: 10%">Chi tiết       </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script type="module" src="/js/admin/all/brand.js"></script>