<div class="admin-all-orders-container">  
  <div class="board-title">
    <p>Đơn hàng: </p>
  </div>
  
  <div class="control-bar">
    <div class="filter-and-create">
      <div class="sort">
        <label>Sắp xếp:</label>
        <select id="createdAt" class="filter-btn">
          <option value="">Ngày đặt hàng</option>
          <option value="-1">Ngày mới</option>
          <option value="1">Ngày cũ</option>
        </select>

        <select id="totalNewOrderPrice" class="filter-btn">
          <option value="">Giá trị đơn</option>
          <option value="1">Giá trị tăng</option>
          <option value="-1">Giá trị giảm</option>
        </select>
      </div>

      <div class="filter">
        <label>Lọc:</label>
        <select id="status" class="filter-btn">
          <option value="">Trạng thái đơn</option>
        </select>

        <select id="paymentMethod" class="filter-btn">
          <option value="">Thanh toán</option>
        </select>
      </div>
      <button id="clear-sort-filter" style="display: none">Xoá bộ lọc</button>

      <a target="_blank" rel="noopener noreferrer" href="/admin/all-orders/order/create" class="create-btn" id="create-btn">
        <i class="fi fi-rr-plus"></i>
        <p>Thêm Đơn Hàng</p>
      </a>
    </div>
    <input type="text" id="search-input" placeholder="Tìm kiếm đơn hàng">
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT           </td>
          <td style="width: 25%">Mã Đơn Hàng   </td>
          <td style="width: 25%">Tên Khách Hàng</td>
          <td style="width: 15%">Tổng Số Tiền  </td>
          <td style="width: 20%">Ngày Đặt Hàng </td>
          <td style="width: 10%">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script type="module" src="/js/admin/all/order.js"></script>