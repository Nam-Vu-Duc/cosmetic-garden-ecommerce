<div class="admin-all-orders-container">  
  <div class="header">
    <div class="board-title">
      <p>Đơn hàng: </p>
    </div>

    <div class="date-filter">
      <input type="date" id="start-date">
      <input type="date" id="end-date">
      <button title="submit" type="submit">Xem</button>
    </div>
  </div>
  
  <div class="control-bar">
    <div class="search">
      <select id="search-type" class="search-btn">
        <option value="">Tìm kiếm theo</option>
        <option value="_id" selected>ID</option>
        <option value="customerInfo.userId">Mã khách hàng</option>
        <option value="customerInfo.name">Tên khách hàng</option>
      </select>
      <input type="text" id="search-input" name="name" placeholder="Tìm kiếm đơn hàng" />
    </div>

    <div class="sort-filter">
      <div class="sort">
        <label>Sắp xếp:</label>
        <select id="createdAt" class="filter-btn">
          <option value="">Ngày đặt hàng</option>
          <option value="-1">Ngày mới nhất</option>
          <option value="1">Ngày xa nhất</option>
        </select>
        <select id="totalNewOrderPrice" class="filter-btn">
          <option value="">Giá trị đơn</option>
          <option value="1">Giá trị cao đến thấp</option>
          <option value="-1">Giá trị thấp đến cao</option>
        </select>
      </div>

      <div class="filter">
        <label>Lọc:</label>
        <select id="status" class="filter-btn">
          <option value="">Trạng thái đơn</option>
        </select>
        <select id="paymentMethod" class="filter-btn">
          <option value="">Thanh toán</option>
        </select>
        <button id="clear-sort-filter" style="display: none">Xoá bộ lọc</button>
      </div>
    </div>

    <a href="/admin/all-orders/order/create" target="_blank" rel="noopener noreferrer" class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <span>Thêm Đơn Hàng</span>
    </a>
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT           </td>
          <td style="width: 25%">Mã Đơn Hàng   </td>
          <td style="width: 25%">Tên Khách Hàng</td>
          <td style="width: 15%">Tổng Số Tiền  </td>
          <td style="width: 20%">Ngày Đặt Hàng </td>
          <td style="width: 10%">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script type="module" src="/js/admin/all/order.js"></script>