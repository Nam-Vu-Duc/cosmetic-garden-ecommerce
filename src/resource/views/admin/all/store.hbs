<div class="admin-all-stores-container">  
  <div class="board-title">
    <p>Cửa hàng: </p>
  </div>

  <div class="control-bar">
    <div class="filter-and-create">
      <div class="sort">
        <label>Sắp xếp theo:</label>
        <select id="revenue" class="filter-btn">
          <option value="">Doanh thu</option>
          <option value="1">Doanh thu tăng dần</option>
          <option value="-1">Doanh thu giảm dần</option>
        </select>
      </div>

      <div class="filter">
        <label>Lọc theo:</label>
        <select id="revenue" class="filter-btn">
          {{!-- <option value="">Doanh thu</option>
          <option value="1">Doanh thu tăng dần</option>
          <option value="-1">Doanh thu giảm dần</option> --}}
        </select>
      </div>

      <button id="clear-filter" style="display: none">Xoá bộ lọc</button>

      <a href="/admin/all-stores/store/create" class="create-btn" id="create-btn">
        <i class="fi fi-rr-plus"></i>
        <p>Thêm Cửa Hàng</p>
      </a>
    </div>
    <input type="text" id="search-input" name="name" placeholder="Tìm kiếm cửa hàng">
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT           </td>
          <td style="width: 15%">Mã cửa hàng   </td>
          <td style="width: 20%">Tên cửa hàng  </td>
          <td style="width: 25%">Địa chỉ       </td>
          <td style="width: 25%">Tổng doanh thu</td>
          <td style="width: 10%">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script src="/js/admin/all/store.js"></script>