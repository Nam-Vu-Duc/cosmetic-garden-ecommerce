<div class="admin-all-stores-container">  
  <div class="header">
    <div class="board-title">
      <p>Đại lý: </p>
    </div>

    <div class="date-filter">
      <input type="date" id="start-date">
      <input type="date" id="end-date">
      <button title="submit" type="submit">Xem</button>
    </div>
  </div>

  <div class="control-bar">
    <div class="search">
      <select id="search-type" class="search-btn">
        <option value="">Tìm kiếm theo</option>
        <option value="_id" selected>ID</option>
        <option value="name">Tên</option>
        <option value="address">Địa chỉ</option>
      </select>
      <input type="text" id="search-input" name="name" placeholder="Tìm kiếm đại lý" />
    </div>

    <div class="sort-filter">
      <div class="sort">
        <label>Sắp xếp:</label>
        <select id="revenue" class="filter-btn">
          <option value="">Doanh thu</option>
          <option value="1">Doanh thu cao - thấp</option>
          <option value="-1">Doanh thu thấp - cao</option>
        </select>
      </div>

      <div class="filter">
        <label>Lọc:</label>
        <select id="revenue" class="filter-btn">
          <option value="">Doanh thu</option>
        </select>
        <button id="clear-sort-filter" style="display: none">Xoá bộ lọc</button>
      </div>
    </div>

    <a href="/admin/all-stores/store/create" target="_blank" rel="noopener noreferrer" class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <span>Thêm Đại Lý</span>
    </a>
  </div>

  <div class="table">
    {{> exportFileButton}}
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT           </td>
          <td style="width: 15%">Mã đại lý   </td>
          <td style="width: 20%">Tên đại lý  </td>
          <td style="width: 25%">Địa chỉ       </td>
          <td style="width: 25%">Tổng doanh thu</td>
          <td style="width: 10%">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each (holderData 10)}}
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script type="module" src="/js/admin/all/store.js"></script>